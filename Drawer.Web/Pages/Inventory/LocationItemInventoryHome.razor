@using Drawer.Web.Authentication
@using Drawer.Web.Pages.Inventory.Models
@using Pages.Location.Models

@attribute [Route(Paths.LocationItemInventoryHome)]

<ContentTitle Text="위치-아이템 재고" />
<AuthorizeView Context="AuthorizeView" Policy="@Policies.CompanyMember">
    <NotAuthorized>
        <NeedCompany />
    </NotAuthorized>
    <Authorized>
        <AidToolBar>
            <AidButton Enabled="@(canRead)"
                       Color="Color.Secondary"
                       StartIcon="@Icons.Material.Filled.Refresh"
                       OnClick=@(() => Load_Click())>
                조회
            </AidButton>
            <AidButton Enabled="@(canCreate)"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick=@(() => Receipt_Click())>
                입고
            </AidButton>
            <AidButton Enabled="@(canUpdate)"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Update"
                       OnClick=@(() => Issue_Click())>
                출고
            </AidButton>
            <AidButton Enabled="@(canDelete)"
                       Color="Color.Warning"
                       StartIcon="@Icons.Material.Filled.Delete"
                       OnClick=@(() => Transfer_Click())>
                이동
            </AidButton>
            <AidButton Enabled="@(canRead)"
                       Color="Color.Info"
                       StartIcon="@Icons.Material.Filled.Download"
                       OnClick=@(() => Download_ClickAsync())>
                엑셀 다운로드
            </AidButton>

            <MudSpacer />

            <AidSearchInput @bind-Value="@searchText" />
        </AidToolBar>
        <AidToolBar>
            <AidCompleteField Label="컨테이너 위치"
                              TKey="long"
                              KeyChanged="@Field_KeyChanged"
                              KeyFunc="@((name) => _locations.FirstOrDefault(x=> x.Name == name)?.Id ?? 0)"
                              ItemValues="@(_locations.Select(x=> x.Name).ToList())" />
        </AidToolBar>
        <AidTable Loading="@_isTableLoading"
                  T="@ItemLocationInventoryModel"
                  UseRowSelection="@false"
                  Items="@_modelList"
                  Filter="@(new Func<ItemLocationInventoryModel,bool>(FilterInventoryDetails))">
            <Header>
                <MudTHeadRow>
                    <MudTh>
                        <MudTableSortLabel T="ItemLocationInventoryModel" SortBy="x => x.ItemName">아이템</MudTableSortLabel>
                    </MudTh>
                    <MudTh>
                        <MudTableSortLabel T="ItemLocationInventoryModel" SortBy="x => x.LocationName">위치</MudTableSortLabel>
                    </MudTh>
                    <MudTh>
                        <MudTableSortLabel T="ItemLocationInventoryModel" SortBy="x => x.Quantity">수량</MudTableSortLabel>
                    </MudTh>
                </MudTHeadRow>
            </Header>

            <Row>
                <MudTd>
                    <MudHighlighter Text="@context.ItemName" HighlightedText="@searchText" />
                </MudTd>
                <MudTd>
                    <MudHighlighter Text="@context.LocationName" HighlightedText="@searchText" />
                </MudTd>
                <MudTd>
                    <MudHighlighter Text="@context.Quantity.ToString()" HighlightedText="@searchText" />
                </MudTd>
            </Row>

            <Footer>
                <MudTFootRow>
                    <MudTd colSpan="100">총 @(TotalRowCount)개의 행</MudTd>
                </MudTFootRow>
            </Footer>
        </AidTable>
    </Authorized>
</AuthorizeView>

