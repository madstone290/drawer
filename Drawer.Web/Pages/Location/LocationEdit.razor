@using Drawer.Web.Pages.Location.Models
@using Drawer.Web.Utils
<ContentTitle Text="@TitleText" />
<AidToolBar>
    <AidButton Color="Color.Error"
               OnClick="Back_Click">
        뒤로
    </AidButton>
    <AidButton Enabled="@(!IsViewMode && _isFormValid)"
               Color="Color.Primary"
               OnClick="Save_Click">
        저장
    </AidButton>
</AidToolBar>

<MudForm @ref="_form"
         @bind-IsValid="_isFormValid"
         Model="_location" ValidationDelay="0" Validation="@_validator.ValidateValue()">
    <MudGrid>
        <MudItem xs="6" sm="3">
            <AidCompleteField TValue="long"
                              Label="상위 그룹"
                              @bind-Text="_location.ParentGroupName"
                              ValueChanged="@((value) => _location.ParentGroupId = value)"
                              For="()=>_location.ParentGroupName"
                              TextItemList="@(_locationGroups.Select(x=> x.Name).ToList())"
                              TextToValueFunc="@((value) => _locationGroups.FirstOrDefault(x=> x.Name == value)?.Id ?? 0)" />
        </MudItem>
        <MudItem xs="6" sm="3">
            <MudTextField @bind-Value="_location.Name"
                          For="@(() => _location.Name)"
                          Label="이름"
                          AutoFocus="true" />
        </MudItem>
        <MudItem xs="0" sm="6">
        </MudItem>
        <MudItem xs="6" sm="3">
            <MudCheckBox @bind-Checked="_location.IsGroup"
                         For="@(() => _location.IsGroup)"
                         Label="그룹 구분" />
        </MudItem>
        <MudItem xs="0" sm="9">
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="_location.Note"
                          For="@(() => _location.Note)"
                          Label="비고" />
        </MudItem>

    </MudGrid>
</MudForm>
