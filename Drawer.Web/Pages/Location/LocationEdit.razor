@using Drawer.Web.Pages.Location.Models
@using Drawer.Web.Utils
<ContentTitle Text="@TitleText" />
<AidToolBar>
    <AidButton DisableElevation
               Color="Color.Error"
               OnClick="Back_Click">
        뒤로
    </AidButton>
    <AidButton DisableElevation
               Disabled="IsViewMode || !_isFormValid"
               Color="Color.Primary"
               OnClick="Save_Click">
        저장
    </AidButton>
</AidToolBar>

<MudForm @ref="_form"
         @bind-IsValid="_isFormValid"
         Model="_location" ValidationDelay="0" Validation="@_validator.ValidateValue()">
    <MudGrid>

        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="_location.Name"
                          For="@(() => _location.Name)"
                          Label="이름"
                          AutoFocus="true" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <AidCompleteField TKey="long"
                              Label="상위 위치"
                              ItemValues="@(_locations.Select(x=> x.Name).ToList())"
                              @bind-Key="_location.UpperLocationId"
                              @bind-Value="_location.UpperLocationName"
                              For="()=>_location.UpperLocationName"
                              KeyFunc="@((value) => _locations.FirstOrDefault(x=> x.Name == value)?.Id ?? 0)" />
        </MudItem>
        <MudItem xs="12" sm="12">
            <MudTextField @bind-Value="_location.Note"
                          For="@(() => _location.Note)"
                          Label="비고" />
        </MudItem>
    </MudGrid>
</MudForm>
