@using Drawer.Web.Authentication
@using Drawer.Web.Pages.Locations.Models
@using Drawer.Web.Pages.Locations.Presenters
@attribute [Route(Paths.Locations.Spots)]

<ContentTitle Text="자리" />
<AuthorizeView Context="AuthorizeView" Policy="@Policies.CompanyMember">
    <NotAuthorized>
        <NeedCompany />
    </NotAuthorized>
    <Authorized>
        <AMudToolBar>
            <AMudButton Disabled="@(!canRead)"
                        Color="Color.Secondary"
                        StartIcon="@Icons.Material.Filled.Refresh"
                        OnClick=@(() => Load_Click())>
                조회
            </AMudButton>
            <AMudButton Disabled="@(!canCreate)"
                        Color="Color.Primary"
                        StartIcon="@Icons.Material.Filled.Add"
                        OnClick=@(() => Add_Click())>
                추가
            </AMudButton>
            <AMudButton Disabled="@(!canUpdate)"
                        Color="Color.Primary"
                        StartIcon="@Icons.Material.Filled.Update"
                        OnClick=@(() => Update_Click())>
                수정
            </AMudButton>
            <AMudButton Disabled="@(!canDelete)"
                        Color="Color.Warning"
                        StartIcon="@Icons.Material.Filled.Delete"
                        OnClick=@(() => Delete_Click())>
                삭제
            </AMudButton>
            <AMudButton Disabled="@(!canCreate)"
                        Color="Color.Info"
                        StartIcon="@Icons.Material.Filled.Upload"
                        OnClick=@(() => Upload_Click())>
                업로드
            </AMudButton>
            <AMudButton Disabled="@(!canRead)"
                        Color="Color.Info"
                        StartIcon="@Icons.Material.Filled.Download"
                        OnClick=@(() => Download_Click())>
                다운로드
            </AMudButton>
            <MudSpacer />

            <AMudSearchField @bind-Value="@searchText">
            </AMudSearchField>
        </AMudToolBar>

        <AMudTable @ref="table"
                   AdditionalClass="mt-2"
                   Loading="@IsTableLoading"
                   T="@SpotTableModel"
                   Items="@SpotList"
                   Filter="@(new Func<SpotTableModel,bool>(FilterSpots))">
            <HeaderContent>
                <MudTHeadRow>
                    <MudTh>
                        <MudTableSortLabel SortBy="@(new Func<SpotTableModel, object>(x=> x.Id))">Id</MudTableSortLabel>
                    </MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="@(new Func<SpotTableModel, object>(x => x.Name))">이름</MudTableSortLabel>
                    </MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="@(new Func<SpotTableModel, object>(x => x.Note))">비고</MudTableSortLabel>
                    </MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="@(new Func<SpotTableModel, object>(x => x.WorkPlaceName))">장소</MudTableSortLabel>
                    </MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="@(new Func<SpotTableModel, object>(x => x.ZoneName))">구역</MudTableSortLabel>
                    </MudTh>
                </MudTHeadRow>
            </HeaderContent>

            <RowTemplate>
                <MudTd DataLabel="Id">@context.Id</MudTd>
                <MudTd DataLabel="이름">
                    <MudHighlighter Text="@context.Name" HighlightedText="@searchText" />
                </MudTd>
                <MudTd DataLabel="비고">
                    <MudHighlighter Text="@context.Note" HighlightedText="@searchText" />
                </MudTd>
                <MudTd DataLabel="장소">
                    <MudHighlighter Text="@context.WorkPlaceName" HighlightedText="@searchText" />
                </MudTd>
                <MudTd DataLabel="구역">
                    <MudHighlighter Text="@context.ZoneName" HighlightedText="@searchText" />
                </MudTd>
            </RowTemplate>

            <FooterContent>
                <MudTFootRow>
                    <MudTd colSpan="100">총 @(TotalRowCount)개의 행</MudTd>
                </MudTFootRow>
            </FooterContent>
        </AMudTable>
    </Authorized>
</AuthorizeView>
