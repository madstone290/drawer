@attribute [Route(Paths.Account.ConfirmEmail)]
@attribute [AllowAnonymous]


<MudGrid>
    @if (!string.IsNullOrWhiteSpace(@Error))
    {
        <MudItem xs="12">
            <MudText Typo="Typo.body1" Color="Color.Error">@Error</MudText>
        </MudItem>
    }
  
    <MudItem xs="6">
        <MudText Typo="Typo.body1" Color="Color.Info">@(Email)으로 인증메일을 전송하였습니다. 수신함을 확인하세요. 수신된 메일이 없을 경우 스팸 메일함을 확인해주세요.</MudText>
    </MudItem>
    <MudItem xs="6">
    </MudItem>
    <MudItem xs="2">
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@SendEmail">인증 이메일 다시 보내기</MudButton>
    </MudItem>
</MudGrid>





