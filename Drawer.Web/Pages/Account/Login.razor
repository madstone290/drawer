@using Drawer.Web.Utils
@attribute [Route(Paths.Account.Login)]
@attribute [AllowAnonymous]

<ContentError Text="@Error"/>
<MudGrid>
    <MudItem xs="12" sm="7">
        <MudPaper Class="pa-4 mt-4">
            <MudText Typo="Typo.h2" Color="Color.Primary" DisableElevation="true">로그인</MudText>
        </MudPaper>
        <MudPaper Class="pa-4">
            <MudForm @ref="Form" Model="@Model" Validation="@Validator.ValidateValue()">
                <MudTextField @bind-Value="@Model.Email"
                              For="@(()=>Model.Email)"
                              Label="이메일" />

                <MudTextField @bind-Value="@Model.Password"
                              For="@(()=>Model.Password)"
                              Label="비밀번호" 
                              OnKeyUp="HandlerKeyboard"
                              InputType="InputType.Password" />

                <MudCheckBox @bind-Checked="@Model.RememberEmail"
                             For="@(()=>Model.RememberEmail)"
                             Label="이메일 기억하기" />
            </MudForm>
        </MudPaper>
        <MudPaper Class="pa-4 mt-4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" OnClick="@SubmitAsync">로그인</MudButton>
        </MudPaper>
    </MudItem>

</MudGrid>
