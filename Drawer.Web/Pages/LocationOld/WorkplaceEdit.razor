@using Drawer.Web.Utils
<ContentTitle Text="@TitleText" />
<AidToolBar>
    <AidButton DisableElevation
               Color="Color.Error"
               OnClick="Back_Click">
        뒤로
    </AidButton>
    <AidButton DisableElevation
               Disabled="IsViewMode || !_isFormValid"
               Color="Color.Primary"
               OnClick="Save_Click">
        저장
    </AidButton>
</AidToolBar>

<MudForm @ref="_form" 
         @bind-IsValid="_isFormValid"
         Model="_workplace"
         ValidationDelay="0"
         Validation="@_validator.ValidateValue()">
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="_workplace.Name"
                          For="@(() => _workplace.Name)"
                          Label="이름"
                          AutoFocus="true" />
        </MudItem>
        <MudItem xs="12" sm="12">
            <MudTextField @bind-Value="_workplace.Note"
                          For="@(() => _workplace.Note)"
                          Label="비고" />
        </MudItem>
    </MudGrid>
</MudForm>
