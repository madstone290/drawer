@using Drawer.Web.Utils
<ContentTitle Text="@TitleText" />
<AidToolBar>
    <MudButton DisableElevation
               Variant="Variant.Filled"
               Color="Color.Secondary"
               OnClick="Cancel_Click">취소</MudButton>
    <MudButton DisableElevation
               Disabled="IsViewMode || !_isFormValid"
               OnClick="Save_Click"
               Variant="Variant.Filled" Color="Color.Primary">저장</MudButton>
</AidToolBar>

<MudForm @ref="_form"
         @bind-IsValid="_isFormValid"
         Model="_item"
         ValidationDelay="0"
         Validation="@_validator.ValidateValue()">
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="_item.Name"
                          For="@(() => _item.Name)"
                          Label="이름"
                          ReadOnly="IsViewMode"
                          AutoFocus="true"
                          />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="_item.Code"
                          For="@(() => _item.Code)"
                          Label="코드"
                          ReadOnly="IsViewMode"/>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="_item.Number"
                          For="@(() => _item.Number)"
                          Label="번호"
                          ReadOnly="IsViewMode"/>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="_item.Sku"
                          For="@(() => _item.Sku)"
                          Label="Sku"
                          ReadOnly="IsViewMode" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField @bind-Value="_item.QuantityUnit"
                          For="@(() => _item.QuantityUnit)"
                          Label="계량 단위"
                          ReadOnly="IsViewMode" />
        </MudItem>
    </MudGrid>
</MudForm>

