@using Drawer.Web.Utils
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" />
            @TitleText
        </MudText>
    </TitleContent>

    <DialogContent>
        <MudForm @ref="Form" @bind-IsValid="IsFormValid"
                 Model="Item" ValidationDelay="0" Validation="@Validator.ValidateValue()">
            <MudGrid>
                @if (ActionMode == ActionMode.View || ActionMode == ActionMode.Update)
                {
                    <MudItem xs="12" sm="12" md="12">
                        <MudTextField @bind-Value="Item.Id"
                                  For="@(() => Item.Id)"
                                  Label="Id"
                                  Disabled />
                    </MudItem>
                }
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="Item.Name"
                                  For="@(() => Item.Name)"
                                  Label="이름"
                                  AutoFocus="true" />
                </MudItem>
                 <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="Item.Code"
                                  For="@(() => Item.Code)"
                                  Label="코드"
                                  AutoFocus="true" />
                </MudItem>
                 <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="Item.Number"
                                  For="@(() => Item.Number)"
                                  Label="번호"
                                  AutoFocus="true" />
                </MudItem>
                 <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="Item.Sku"
                                  For="@(() => Item.Sku)"
                                  Label="Sku"
                                  AutoFocus="true" />
                </MudItem>
                 <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="Item.QuantityUnit"
                                  For="@(() => Item.QuantityUnit)"
                                  Label="계량 단위"
                                  AutoFocus="true" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>

    <DialogActions>
        <MudButton DisableElevation
                   Variant="Variant.Filled"
                   Color="Color.Secondary"
                   OnClick="@Cancel_Click">취소</MudButton>
        <MudButton DisableElevation
                   Disabled="@(!IsFormValid)"
                   OnClick="@Save_Click"
                   Variant="Variant.Filled" Color="Color.Primary">저장</MudButton>
    </DialogActions>
</MudDialog>
