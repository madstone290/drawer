@if (!Visible)
    return;

<MudToolBar Class="@Class"
            DisableGutters="true">
            @ChildContent
</MudToolBar>

@code {
    private const string BaseClass = "aid-toolbar";
    public string Class { get => string.Join(" ", BaseClass, FlexSpace.Class); }

    [Parameter] public bool Visible { get; set; } = true;
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public FlexSpace FlexSpace { get; set; } = FlexSpace.Stay;

}