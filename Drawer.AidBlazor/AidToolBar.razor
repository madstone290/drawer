@inherits MudToolBar

@{
    if (!Visible)
        return;
    
       
    if (Class == null || !Class.Contains(FlexSpace.Class))
    {
        Class = string.Join(" ", Class, FlexSpace.Class);
    }

    base.BuildRenderTree(__builder);
}

@code {
    public AidToolBar()
    {
        DisableGutters = true;
        Class = "aid-toolbar";
    }

    [Parameter]
    public bool Visible { get; set; } = true;

    [Parameter]
    public FlexSpace FlexSpace { get; set; } = FlexSpace.Stay;

}
