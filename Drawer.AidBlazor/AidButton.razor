@inherits MudButton

@{
    if (!Visible)
        return;

    base.BuildRenderTree(__builder);
}

@code {

    public AidButton()
    {
        Variant = Variant.Filled;
        IconColor = Color.Surface;
        DisableElevation = true;
        Class = "mr-1";

        if (!Disabled)
            Disabled = !Enabled;
    }

    [Parameter]
    public bool Visible { get; set; } = true;

    [Parameter]
    public bool Enabled { get; set; } = true;
   
}

