@using Drawer.WebClient.Utils
@attribute [Route(Paths.Account.Register)]
@attribute [AllowAnonymous]

@if (!string.IsNullOrWhiteSpace(@Error))
{
    <MudText Color="Color.Error">@Error</MudText>
}
<MudGrid>
    <MudItem xs="12" sm="7">
        <MudPaper Class="pa-4">
            <MudForm @ref="Form" Model="@Model" Validation="@Validator.ValidateValue()">
                <MudTextField @bind-Value="@Model.DisplayName"
                              For="@(()=>Model.DisplayName)"
                              Label="이름" />

                <MudTextField @bind-Value="@Model.Email"
                              For="@(()=>Model.Email)"
                              Label="이메일" />

                <MudTextField @bind-Value="@Model.Password"
                              For="@(()=>Model.Password)"
                              Label="비밀번호"
                              InputType="InputType.Password" />

                <MudTextField @bind-Value="@Model.ConfirmPassword"
                              For="@(()=>Model.ConfirmPassword)"
                              Label="비밀번호 확인"
                              InputType="InputType.Password" />
            </MudForm>
        </MudPaper>
        <MudPaper Class="pa-4 mt-4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" OnClick="@SubmitAsync">가입하기</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>
