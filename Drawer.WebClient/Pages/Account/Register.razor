@attribute [Route(Paths.Account.Register)]

<MudGrid>
    <MudItem xs="12" sm="7">
        <MudPaper Class="pa-4">
            <MudForm @ref="Form" Model="@Input" Validation="@Validator.ValidateValue()">
                <MudTextField @bind-Value="@Input.DisplayName"
                              For="@(()=>Input.DisplayName)"
                              Label="이름" />

                <MudTextField @bind-Value="@Input.Email"
                              For="@(()=>Input.Email)"
                              Label="이메일" />

                <MudTextField @bind-Value="@Input.Password1"
                              For="@(()=>Input.Password1)"
                              Label="비밀번호"
                              InputType="InputType.Password" />

                <MudTextField @bind-Value="@Input.Password2"
                              For="@(()=>Input.Password2)"
                              Label="비밀번호 확인"
                              InputType="InputType.Password" />
            </MudForm>
        </MudPaper>
        <MudPaper Class="pa-4 mt-4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" OnClick="@SubmitAsync">가입하기</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>
