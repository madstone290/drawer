@if (Visible)
{
<MudAlert Severity="Severity.Error">@Text</MudAlert>    
}

@code{
    public bool Visible => !string.IsNullOrWhiteSpace(Text);

    [Parameter]
    public string? Text { get; set; }

    public void UpdateText (string? text)
    {
        Text = text;
        StateHasChanged();
    }
}
