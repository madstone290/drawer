@inherits MudBlazor.MudButton
@{
    if (!Visible)
        return;

    if (Parameters != null)
    {
        base.DisableElevation = true;
        base.Variant = Parameters.Variant;
        base.IconColor = Parameters.IconColor;
        base.Class = Parameters.Class;
        base.Disabled = !Parameters.Enabled;
    }
    base.BuildRenderTree(__builder);
}

@code {
    public class RazorParameters
    {
        public bool Enabled { get; set; } = true;
        public bool DisableElevation { get; set; } = true;
        public Variant Variant { get; set; } = Variant.Filled;
        public Color IconColor { get; set; } = Color.Surface;
        public string Class { get; set; } = "mr-1";
    }

    [Parameter]
    public bool Visible { get; set; } = true;
    [Parameter]
    public RazorParameters Parameters { get; set; } = new RazorParameters();
}

